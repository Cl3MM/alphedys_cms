<div class="page-header">
  <h1>Login Page</h1>
</div>
<%= form_tag sessions_path, :class => 'form-horizontal' do |f| %>
  <fieldset>
    <legend>Please enter your credentials</legend>
    <div class="control-group">
      <%= label_tag :email, :email, :class => 'control-label' %>
      <div class="controls">
        <%= text_field_tag :email, params[:email], :class => 'text_field', :size => 30 %>
      </div>
    </div>

    <div class="control-group">
      <%= label_tag :password, :password, :class => 'control-label' %>
      <div class="controls">
        <%= password_field_tag :password, nil, :class => 'password_field' %>
        <p><%= link_to "Forgotten password?", new_password_reset_path %></p>
      </div>
    </div>

    <div class="form-actions">
      <%= submit_tag "Log In", :class => 'btn btn-primary' %>
    </div>

  </fieldset>
<% end %>
