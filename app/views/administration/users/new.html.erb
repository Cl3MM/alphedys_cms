<%= render :partial => "breadcrumbs", :locals => { :title => "Ajout d'un nouveau client"} %>

<%= simple_form_for [:administration, @user], :html => { :class => 'form-horizontal' } do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-error">
      <h4 class="alert-heading">Le formulaire n'est pas valide</h4>
      <a class="close" data-dismiss="alert">&times;</a>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset>
    <%= f.input :email, label: "Adresse email", hint: "Cette adresse sera votre identifiant de connexion." %>
    <%= f.input :password, label: "Mot de passe" %>
    <%= f.input :password_confirmation, label: "Confirmer le mot de passe" %>
    <%= f.input :role, :collection => %w[user admin], label: "Rôle", :prompt => "Sélectionnez un rôle" %>
    <%= f.error :base %>
    <div class="form-actions">
      <%= f.button :submit, "Créer client", :class => 'btn-primary' %>
      <%= link_to 'Retour', administration_users_path, :type => :reset, :class => "btn btn" %>
    </div>
  </fieldset>
<% end -%>
