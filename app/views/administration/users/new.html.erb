<% content_for :breadcrumbs do %>
<ul class="breadcrumb">
  <li>
    <%= link_to "Administration", administration_users_path %>
    <span class="divider">/</span>
  </li>
  <li class="active">
    <%= link_to "Nouvel Utilisateur", new_administration_user_path%>
  </li>
</ul>
<% end %>

<div class="page-header">
  <h2>Ajout d'un nouveau client </h2>
</div>

<%= simple_form_for [:administration, @user], :html => { :class => 'form-horizontal' } do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-error">
      <h4 class="alert-heading">Form is invalid</h4>
      <a class="close" data-dismiss="alert">&times;</a>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset>

    <%= f.input :email, label: "Adresse email", hint: "Cette adresse sera votre identifiant de connexion." %>
    <%= f.input :password, label: "Mot de passe" %>
    <%= f.input :password_confirmation, label: "Confirmer le mot de passe" %>
    <%= f.input :role, :collection => %w[user admin], label: "Rôle", :prompt => "Sélectionnez un rôle" %>
    <%= f.error :base %>
    <div class="form-actions">
      <%= f.button :submit, "Créer client", :class => 'btn-primary' %>
      <%= link_to 'Retour', administration_users_path, :type => :reset, :class => "btn btn" %>
    </div>
  </fieldset>
<% end -%>

