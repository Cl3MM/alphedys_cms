<%= simple_form_for @document, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Document</legend>

    <div class="control-group">
      <%= f.label :contract_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :contract_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :uploaded_file_file_name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :uploaded_file_file_name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :uploaded_file_content_type, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :uploaded_file_content_type, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :uploaded_file_file_size, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :uploaded_file_file_size, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :uploaded_file_updated_at, :class => 'control-label' %>
      <div class="controls">
        <%= f.datetime_select :uploaded_file_updated_at, :class => 'datetime_select' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', documents_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
