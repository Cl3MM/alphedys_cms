<!DOCTYPE html>
<html>
  <head>
    <title>Alph&eacute;dys - Interface d'Ã©change client</title>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
  <body>
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="#">Alphedys Conseil</a>
          <div class="nav-collapse">
            <% if current_user && current_user.is_admin? %>
            <ul class="nav">
              <li><%= link_to "Administration", administration_users_path %></li>
            </ul>
            <% end -%>
            <ul class="nav pull-right">
              <!--<form class="navbar-search pull-left">
                <input type="text" class="search-query" placeholder="Rechercher">
              </form>-->
              <% if current_user %>
                <ul class="nav">
                  <li class="dropdown">
                    <a href="#"
                       class="dropdown-toggle"
                       data-toggle="dropdown">
                    <%= ((current_user.firstname && current_user.lastname).nil?  ? current_user.email :
                      "#{current_user.firstname.capitalize} #{current_user.lastname.upcase}") %>
                       <b class="caret"></b>
                     </a>

                    <%#=link_to content_tag('b', '', :class => 'caret') + "BOB",
                                current_user, :class => "dropdown-toggle", "data-toggle" => "dropdown"
                      %>
                    <ul class="dropdown-menu">
                      <li><%= link_to "Voir mon Profil", user_path(current_user) %></li>
                      <li>
                        <% if current_user.is_admin? %>
                        <%= link_to "Editer mon Profil", edit_administration_user_path(current_user) %>
                      <% else %>
                        <%= link_to "Editer mon Profil", edit_user_path(current_user) %>
                      <% end -%>
                      </li>
                      <li class="divider"></li>
                      <li><%= link_to "Deconnexion", logout_path %></li>
                    </ul>
                  </li>
                </ul>
              <% else %>
                <!--<li><%#= link_to "Sign Up", signup_path %></li>-->
                <li><%= link_to "Connexion", login_path %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row-fluid">

        <% if content_for?(:breadcrumbs) %>
          <!-- Breadcrumbs -->
          <div class="row">
            <div class="span12">
              <%= yield(:breadcrumbs)  %>
            </div>
          </div>
        <% end -%>

        <% flash.each do |name, msg| %>
          <!-- Flash -->
          <div class="row">
            <div class="span12">
              <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
                <a class="close" data-dismiss="alert">&times;</a>
                <%= msg %>
              </div>
            </div>
          </div>
        <% end %>

        <div class="row">
        <% if content_for?(:right_pane) %>
          <div class="span9">
        <% else %>
          <div class="span12">
        <% end -%>
            <%= yield %>
          </div>

        <% if content_for?(:right_pane) %>
          <div class="span3">
            <%= yield :right_pane %>
          </div>
        <% end -%>
        </div>
      </div>
    </div>
  </body>
</html>
