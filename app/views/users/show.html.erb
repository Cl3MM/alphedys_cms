<% content_for :right_pane do %>
  <div class="span2">
    <div class="page-header">
      <h2>Instructions</h2>
      <address>
        <%= address_tag @user %>
      </address>
  </div>
<% end %>

<div class="page-header">
  <h2>
    <% if @contract.nil? %>
      <%= @user.name_tag %>
      <small>n'a pas de contrat</small>
    <% else %>
      Contrat "<%= @contract.name%>"
      <small> de <%= @user.name_tag %></small>
    <% end -%>
  </h2>
</div>
<div class="well">
  <%= link_to 'Retour', administration_user_path(@user), :class => 'btn btn-small'  %>
  <%#= link_to 'Modifier', edit_administration_user_contract_path(@user, @contract), :class => 'btn' %>
  <%#= link_to 'Supprimer Contrat', administration_user_contract_path(@user, @contract), :method => 'delete', :confirm => 'Etes vous sur ?', :class => 'btn btn-danger' %>
  <%#= link_to "Ajouter un fichier", new_administration_user_contract_document_path(@user,@contract), :class => "btn btn-primary pull-right" %>
</div>
<% if @contract %>
  <% if @contract.documents.empty? %>
    Aucun fichier : <%= link_to "Ajouter un fichier", new_administration_user_contract_document_path(@user,@contract) %>
<% else %>
  <table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <td>Nom</td>
        <td>Taille</td>
        <td>Modifi√© le</td>
        <td>Actions</td>
      </tr>
    </thead>
    <tbody>
      <% @contract.documents.each do |file| %>
        <tr>
          <td><%= file.file_name %></td>
          <td><%= number_to_human_size(file.uploaded_file_file_size) %></td>
          <td><%= file.uploaded_file_updated_at %></td>
          <td></td>
        </tr>
      <% end -%>
    </tbody>
  </table>
<% end %>
<% end %>
